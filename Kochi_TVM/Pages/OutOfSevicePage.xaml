<Page x:Class="Kochi_TVM.Pages.OutOfSevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kochi_TVM.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="768"
      d:DesignWidth="1024"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      Title="OutOfSevicePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="imgLoading" Source="/Kochi_TVM;component/Images/out_of_service.jpg"/>
        <Label x:Name="outOfServiceLbl" Grid.Row="1" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="80" FontSize="36"/>
    </Grid>
</Page>
